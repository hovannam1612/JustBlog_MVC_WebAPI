@using JustBlog.Application.Services.PostServices
@inject IPostService postService
@{
    var mostViewedPosts = postService.GetTopFiveMostView();
    var latestPosts = postService.GetTopFiveLatestPosts();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] JustBlog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/comment.css" rel="stylesheet" />
</head>
<body>
    <partial name="_Header" />

    <div class="container-fluid px-4 px-lg-5">
        <div class="row justify-content-center">
            <div class="col col-lg-9">
                @RenderBody()
            </div>
            <div class="col col-lg-3">
                <div>
                    <h5>Top 5 Most Viewed Posts</h5>
                    <partial name="~/Views/Post/_ListPost.cshtml" model="mostViewedPosts" />
                </div>
                <br /> <br />
                <div>
                    <h5>Top 5 Latest Posts</h5>
                    <partial name="~/Views/Post/_ListPost.cshtml" model="latestPosts" />
                </div>
                <br /> <br />
                <partial name="~/Views/Home/AllTags.cshtml" />
            </div>
        </div>
    </div>
    <br />
    <partial name="_Footer" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
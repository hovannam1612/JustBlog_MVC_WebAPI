@using JustBlog.Application.Services.TagServices
@inject ITagService tagService

@{
    var tagList = tagService.GetTagAvailable();

}

<h5>List of tags</h5>
<div class="row justify-content-center" style="font-size: 13px">
    <hr />
    <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="card">

            <div class="card-body p-0 m-1">
                <form method="get">
                    @foreach (var item in tagList)
                    {
                        <button type="submit" asp-action="DetailPostTag" asp-controller="Post" asp-route-id="@item.Id" class="btn btn-success small btn-sm mb-1">@item.Name</button>
                    }
                </form>
            </div>
        </div>
    </div>
</div>
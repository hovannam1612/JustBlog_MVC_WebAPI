@using JustBlog.ViewModel.Categories
@model CategoryViewModel

<h2>Category Detail</h2>
<br />
<div class="row justify-content-center">
    <div class="col-md-12 col-lg-12 col-xl-12">
        <div class="card">
            <div class="card-header">
                <h4>
                    @Model.Name
                </h4>
            </div>

            <div class="card-body">
                <p><b>Slug Url:</b>  @Model.UrlSlug</p>
                <p><b>Short Description:</b> @Model.Description</p>
            </div>
        </div>
        <br />
        <a href="/admin/category/index" class="btn btn-primary">List of categories</a>
    </div>
</div>
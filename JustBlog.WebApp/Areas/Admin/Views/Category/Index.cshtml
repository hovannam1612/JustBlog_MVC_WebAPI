@using JustBlog.ViewModel.Categories

@model IEnumerable<CategoryViewModel>


@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
    </div>
}

<div class="card">
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Created On</th>
                    <th>Update On</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.CreatedOn</td>
                    <td>@item.UpdatedOn</td>
                    <td>
                        <form method="get">
                            <div class="btn-group">
                                <button type="submit" class="btn btn-sm btn-danger ml-1" asp-action="Delete" asp-route-id="@item.Id"
                                        onclick="return confirm('Bạn có muốn xóa danh mục và các bài biết của nó không?');">
                                    Delete
                                </button>
                                <button type="submit" class="btn btn-sm btn-success ml-1" asp-action="Update" asp-route-id="@item.Id">Update</button>
                                <button type="submit" class="btn btn-sm btn-primary ml-1" asp-action="Detail" asp-route-id="@item.Id">View Detail</button>
                            </div>
                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>